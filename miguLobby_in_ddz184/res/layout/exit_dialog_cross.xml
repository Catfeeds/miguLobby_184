<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/exit_dialog_main"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/force_dialog_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/system_pop_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_title_bg"
            android:gravity="center"
            android:text="@string/prompt2"
            android:textColor="#903300"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/exit_lable_1"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/lyimages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >


            <ImageView
                android:id="@+id/img_more_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/free_gain_dou_selector" />
            
			<ImageView 
			    android:id="@+id/img_circle_anim"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			  android:layout_alignRight="@id/img_more_games"
			    android:layout_marginTop="40dp"
			    android:layout_marginRight="10dp"
                android:background="@drawable/transparent_circle"
			    />            
            <ImageView 
                android:id="@+id/img_shouzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shouzhi"
                android:layout_alignRight="@id/img_more_games"
                android:layout_marginTop="50dp"
                />
            
        </RelativeLayout>
        

        <TextView
            android:id="@+id/tvOption"
            style="@style/loginGiftLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/exit_lable_2"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/img_exit_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange"
                    android:text="@string/exit_game"
                    android:textColor="@color/orange_btn_text_color" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >
                
				<Button
                    android:id="@+id/img_continute_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_btn_blue_selector"
                    android:text="@string/continue_game"
                    android:textColor="@color/blue_btn_text_color" />
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/exit_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-25dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/exit_dialog_main"
        android:background="@drawable/login_gift_btn_cancel" />

</RelativeLayout>