<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="3dip" >

    <ImageButton
        android:id="@+id/ib_more_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pop_share" />

    <ImageView
        android:id="@+id/iv_div_1"
        style="@style/popDividerStyle"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/ib_more_mix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pop_mix" />

    <ImageView
        android:id="@+id/iv_div_2"
        style="@style/popDividerStyle"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/ib_more_ranklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pop_ranklist" />

    <ImageView
        android:id="@+id/iv_div_3"
        style="@style/popDividerStyle"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/ib_more_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pop_feedback" />

    <ImageView
        android:id="@+id/iv_div_4"
        style="@style/popDividerStyle"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/ib_more_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pop_help" />

    <ImageView
        android:id="@+id/iv_div_5"
        style="@style/popDividerStyle"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/ib_more_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pop_point" />

    <ImageView
        android:id="@+id/iv_div_6"
        style="@style/popDividerStyle"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/ib_more_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pop_update" />

        <ImageView
            android:id="@+id/img_update_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ib_more_update"
            android:layout_alignTop="@+id/ib_more_update"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_tag"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_div_7"
        style="@style/popDividerStyle"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/ib_more_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pop_switch" />

</LinearLayout>