<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_gift_bg" >

        <TextView
            android:id="@+id/ivTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:background="@drawable/dialog_title_bg"
            android:gravity="center"
            android:text="@string/login_gift_ledou"
            android:textColor="#903300"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/jiangli_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivTitle"
            android:layout_centerHorizontal="true"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:id="@+id/buyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/login_gift_days_ledou"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/buyLabel"
                    android:layout_toRightOf="@id/buyLabel" />

                <RelativeLayout
                    android:id="@+id/relBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buyLabel"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center" >

                    <RelativeLayout
                        android:id="@+id/gift_1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <FrameLayout
                            android:id="@+id/fy1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/gift_1st_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_gift_item_normal" />

                            <TextView
                                android:id="@+id/gift_1st_label"
                                style="@style/loginGiftStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="5dp"
                                android:text="400乐豆"
                                android:textColor="#ffffff"
                                android:textSize="14sp" />
                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gift_2nd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/gift_1st" >

                        <FrameLayout
                            android:id="@+id/fy2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/gift_2nd_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_gift_item_normal" />

                            <TextView
                                android:id="@+id/gift_2nd_label"
                                style="@style/loginGiftStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="5dp"
                                android:text="400乐豆"
                                android:textColor="#ffffff"
                                android:textSize="14sp" />
                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gift_3rd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/gift_2nd" >

                        <FrameLayout
                            android:id="@+id/fy3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/gift_3rd_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_gift_item_normal" />

                            <TextView
                                android:id="@+id/gift_3rd_label"
                                style="@style/loginGiftStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="5dp"
                                android:text="400乐豆"
                                android:textColor="#ffffff"
                                android:textSize="14sp" />
                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gift_4th"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/gift_3rd" >

                        <FrameLayout
                            android:id="@+id/fy4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/gift_4th_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_gift_item_normal" />

                            <TextView
                                android:id="@+id/gift_4th_label"
                                style="@style/loginGiftStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="5dp"
                                android:text="400乐豆"
                                android:textColor="#ffffff"
                                android:textSize="14sp" />
                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gift_5th"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/gift_4th" >

                        <FrameLayout
                            android:id="@+id/fy5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/gift_5th_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_gift_item_normal" />

                            <TextView
                                android:id="@+id/gift_5th_label"
                                style="@style/loginGiftStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="5dp"
                                android:text="400乐豆"
                                android:textColor="#ffffff"
                                android:textSize="14sp" />
                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_line" />

                <ImageView
                    android:id="@+id/time_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/time_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/time_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_3"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/time_4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_4"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/time_5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_5"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                style="@style/loginGiftLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:text="" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/payLabel"
                    style="@style/loginGiftLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/login_gift_info"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/balanceLabel"
                    style="@style/loginGiftLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingRight="10dp"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jiangli_area"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/member_label1"
                    style="@style/loginGiftLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/login_gift_member"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/member_mbmultiple"
                    style="@style/loginGiftLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/member_label1" />

                <TextView
                    android:id="@+id/member_label2"
                    style="@style/loginGiftLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/member_mbmultiple"
                    android:shadowColor="#40ffffbe"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/login_gift_more_gift"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/system_pop_ll_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/btnConfir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/become_huiyuan_selector"
                        android:textColor="#0b4d77" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mainLayout"
        android:background="@drawable/login_gift_btn_cancel"
        android:contentDescription="@string/app_name" />

</RelativeLayout>