<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/exit_dialog_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/force_dialog_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/system_pop_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_title_bg"
            android:gravity="center"
            android:text="@string/prompt2"
            android:textColor="#903300"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/exit_lable_1"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/lyimages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <ImageView
                android:id="@+id/img_quick_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"             
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/tab_quick_buy_selector" />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_more_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:visibility="gone"
                android:src="@drawable/tab_more_game_selector" />
        </LinearLayout>
        
        <RelativeLayout
                    android:id="@+id/reggift_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="14dp"
                    android:paddingRight="20dp" >

                    <ImageView
                        android:id="@+id/gift_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:contentDescription="@string/app_name"/>

                    <TextView
                        android:id="@+id/gift_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@id/gift_iv"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/gift_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:layout_toRightOf="@id/gift_iv"
                        android:textColor="#ffffff"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/gift_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_toRightOf="@id/gift_iv"
                        android:textColor="#ffea78"
                        android:textSize="12sp"/>

                </RelativeLayout>

        <TextView
            android:id="@+id/tvOption"
            style="@style/loginGiftLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/exit_lable_2"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/img_exit_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange"
                    android:text="@string/exit_game"
                    android:textColor="@color/orange_btn_text_color" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >
                
				<Button
                    android:id="@+id/img_continute_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_btn_blue_selector"
                    android:text="@string/continue_game"
                    android:textColor="@color/blue_btn_text_color" />
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/exit_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-25dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/exit_dialog_main"
        android:background="@drawable/login_gift_btn_cancel" />

</RelativeLayout>