<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/logpop_tab_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logpop_reward_light" />

        <Button
            android:id="@+id/logpop_tab_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/logpop_tab_reward"
            android:layout_below="@id/logpop_tab_reward"
            android:background="@drawable/logpop_notice_dark" />

        <RelativeLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logpop_tab_reward"
            android:background="@drawable/force_dialog_bg" >

            <ImageView
                android:id="@+id/ivTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/logpop_title" />

            <RelativeLayout
                android:id="@+id/logpop_reward_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivTitle"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/jiangli_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/songdou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/songdou_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_gift_item" >

                            <ImageView
                                android:id="@+id/songdou_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/login_gift_dou" />

                            <TextView
                                android:id="@+id/songdou_lable1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/songdou_pic"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="@string/login_gift_login_duoduo"
                                android:textColor="#ffffff"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/songdou_lable2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/songdou_lable1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="1dp"
                                android:text="@string/login_gift_duoduo"
                                android:textColor="#ffea78"
                                android:textSize="10sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/songdou_lable3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/songdou_area"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:text="@string/login_gift_echer_login"
                            android:textColor="#7cff42"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/choujiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" >

                        <RelativeLayout
                            android:id="@+id/choujiang_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_gift_item" >

                            <ImageView
                                android:id="@+id/choujiang_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/login_gift_cj" />

                            <TextView
                                android:id="@+id/choujiang_lable1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/choujiang_pic"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="@string/login_gift_login_continuity"
                                android:textColor="#ffffff"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/choujiang_lable2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/choujiang_lable1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="1dp"
                                android:text="@string/login_gift_detail"
                                android:textColor="#ffea78"
                                android:textSize="10sp" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_choujiang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/choujiang_area"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/btn_green"
                            android:text="@string/login_gift_lucky"
                            android:textColor="#ffffff" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" >

                        <RelativeLayout
                            android:id="@+id/task_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_gift_item" >

                            <ImageView
                                android:id="@+id/task_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/login_gift_task" />

                            <TextView
                                android:id="@+id/task_lable1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_pic"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="@string/login_gift_game_win_ledou"
                                android:textColor="#ffffff"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/task_lable2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/task_lable1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="1dp"
                                android:text="@string/login_gift_one_huafenjuan"
                                android:textColor="#ffea78"
                                android:textSize="10sp"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_dotask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/task_area"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/btn_green"
                            android:text="@string/login_gift_do_task"
                            android:textColor="#ffffff" />
                    </RelativeLayout>
                    
                    <RelativeLayout
                        android:id="@+id/get_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" >

                        <RelativeLayout
                            android:id="@+id/ticket_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_gift_item" >

                            <ImageView
                                android:id="@+id/ticket_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/login_gift_ticket" />

                            <TextView
                                android:id="@+id/ticket_lable1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ticket_pic"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="@string/login_gift_get_ticket_lable"
                                android:textColor="#ffffff"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/ticket_lable2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ticket_lable1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="1dp"
                                android:text="@string/login_gift_one_huafenjuan"
                                android:textColor="#ffea78"
                                android:textSize="10sp"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ticket_area"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/btn_green"
                            android:text="@string/login_gift_get_ticket"
                            android:textColor="#ffffff" />
                    </RelativeLayout>
                    
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/logpop_active_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jiangli_area"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/logpop_reward_bottom_bg"
                    android:paddingBottom="14dp"
                    android:paddingRight="20dp" >

                    <ImageView
                        android:id="@+id/activity_iv"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/login_gift_activity"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/activity_name"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@id/activity_iv"
                        android:ellipsize="end"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:text="@string/login_gift_activity_loading"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/activity_time"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:layout_toRightOf="@id/activity_iv"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/activity_info"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_toRightOf="@id/activity_iv"
                        android:textColor="#ffea78"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btn_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@id/activity_name"
                        android:background="@drawable/login_gift_btn_selector"
                        android:singleLine="true"
                        android:textColor="#ffffff" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logpop_notice_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/logpop_reward_layout"
                android:layout_alignLeft="@id/logpop_reward_layout"
                android:layout_alignRight="@id/logpop_reward_layout"
                android:layout_alignTop="@id/logpop_reward_layout"
                android:visibility="invisible" >

                <LinearLayout
                    android:id="@+id/force_dlg_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="60dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp" >

                    <TextView
                        android:id="@+id/tvLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#a0ff90"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/tvContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />
                    </ScrollView>

                    <Button
                        android:id="@+id/confirmBtn"
                        style="@style/dialogButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_orange"
                        android:text="@string/login_gift_goto_look"
                        android:textColor="@color/orange_btn_text_color" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_dlg_pump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/dlg_pump" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/login_gift_btn_cancel"
        android:contentDescription="@string/app_name" />

</RelativeLayout>