<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/fyCardZoneItem_id1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivCardItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/card_item_1"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imgCardZoneName1"
            style="@style/cardBaseStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivCardItem1"
            android:layout_alignRight="@+id/ivCardItem1"
            android:layout_alignTop="@id/ivCardItem1"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvTotalUsers1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivCardItem1"
            android:layout_alignLeft="@id/ivCardItem1"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="10dp"
            android:textColor="#29003c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvExplain1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivCardItem1"
            android:layout_below="@+id/imgCardZoneName1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:gravity="left"
            android:singleLine="false"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
