<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ryCardZoneGridViewItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@drawable/gridview_item_selector"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:maxEms="15"
        android:shadowColor="#1c4969"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:singleLine="true"
        android:text="@string/ddz_gift_ledou_match"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tvName"
        android:shadowColor="#1c4969"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="@string/ddz_ledou_match_difen"
        android:textColor="#ffefa5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvInCondition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/ddz_gift_ledou"
            android:textColor="#14629b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvOnLineUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:singleLine="true"
            android:text="xxxx"
            android:textColor="#14629b"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/iconImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/cardzone_corner_01"
        android:maxLines="2"
        android:paddingLeft="11dp"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/iconImg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:paddingLeft="11dp"
        android:layout_toLeftOf="@id/iconImg"
        android:background="@drawable/cardzone_corner_01"
        android:maxLines="2"
        android:paddingTop="3dp" />

</RelativeLayout>